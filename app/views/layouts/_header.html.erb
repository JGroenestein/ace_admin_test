<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= yield(:title) %></title>
  <meta name="description" content="" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- basic styles -->
  <%= stylesheet_link_tag "bootstrap.min" %>
  <%= stylesheet_link_tag "bootstrap-responsive.min" %>
  <%= stylesheet_link_tag "font-awesome.min" %>

  <!--[if IE 7]>
    <%= stylesheet_link_tag "font-awesome-ie7.min" %>
  <![endif]-->

  <!-- page specific plugin styles -->
  <%= stylesheet_link_tag "jquery-ui-1.10.3.custom.min" %>
  <%= stylesheet_link_tag "assets/css/jquery.gritter" %>

  <!-- ace styles -->
  <%= stylesheet_link_tag "ace.min" %>
  <%= stylesheet_link_tag "ace-responsive.min" %>
  <%= stylesheet_link_tag "ace-skins.min" %>

  <!--[if lt IE 9]>
  <%= stylesheet_link_tag "ace-ie" %>
  <![endif]-->

</head>

<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">


      <a class="brand" href="/"><small><i class="icon-cloud"></span></i> <span class="red">Test</span> <span class="white">Heimdall </small> </a>
      <ul class="nav pull-right ace-nav">
        <li class="grey">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="icon-tasks"></i>
            <span class="badge badge-important">4</span>
          </a>
          <ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-closer">
            <li class="nav-header">
              <i class="icon-ok"></i> Title
            </li>
            <li>
              Item # 1
            </li>
          </ul>
        </li>

        <li class="purple">
        </li>

        <li class="green">
        </li>

        <li class="light-blue user-profile">
          <a class="user-menu dropdown-toggle" href="#" data-toggle="dropdown">
            <%= gravatar_for @user %>

            <span id="user_info">
								<small>Welcome,</small> <%= @user.name %>
							</span>
            <i class="icon-caret-down"></i>
          </a>
          <ul id="user_menu" class="pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer">
            <li><%= link_to (raw('<i class="icon-cog"></i> Settings')), edit_user_path(current_user) %></li>
            <li><%= link_to (raw('<i class="icon-group"></i> Users')), users_path, method: "delete" %></li>
            <li class="divider"></li>
            <li><%= link_to (raw('<i class="icon-off"></i> Logout')), signout_path, method: "delete" %></li>
          </ul>
        </li>
      </ul><!--/nav-->

    </div><!--/container-fluid-->
  </div><!--/navbar-inner-->
</div><!--/navbar-->

<div class="container-fluid" id="main-container">
  <a href="#" id="menu-toggler"><span></span></a><!-- menu toggler -->

  <div id="sidebar" class="row-fluid">

    <div id="sidebar-shortcuts">
      <div id="sidebar-shortcuts-large">
        <button class="btn btn-small btn-success"><i class="icon-signal"></i></button>
        <button class="btn btn-small btn-info"><i class="icon-pencil"></i></button>
        <button class="btn btn-small btn-warning"><i class="icon-group"></i></button>
        <button class="btn btn-small btn-danger"><i class="icon-cogs"></i></button>
      </div>
      <div id="sidebar-shortcuts-mini">
        <span class="btn btn-success"></span>
        <span class="btn btn-info"></span>
        <span class="btn btn-warning"></span>
        <span class="btn btn-danger"></span>
      </div>
    </div><!-- #sidebar-shortcuts -->

    <ul class="nav nav-list">
      <li>

        <%= link_to root_path do %>
          <i class="icon-dashboard"></i>
          <span>Dashboard</span>
        <% end %>
      </li>


      <li>
        <a href="#" class="dropdown-toggle" >
          <i class="icon-desktop"></i>
          <span>UI Elements</span>
          <b class="arrow icon-angle-down"></b>
        </a>
        <ul class="submenu">
          <li><%= link_to elements_path do %><i class="icon-double-angle-right"></i> Elements<% end %></li>
          <li><%= link_to buttons_path do %><i class="icon-double-angle-right"></i> Buttons & Icons<% end %></li>
        </ul>
      </li>
    </ul><!--/.nav-list-->
    <div id="sidebar-collapse"><i class="icon-double-angle-left"></i></div>

  </div><!--/#sidebar-->


  <div id="main-content" class="clearfix">

    <div id="breadcrumbs">
      <ul class="breadcrumb">
        <li><i class="icon-home"></i> <a href="#">Home</a><span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active">Empty Page</li>
      </ul><!--.breadcrumb-->

      <div id="nav-search">
        <form class="form-search">
									<span class="input-icon">
										<input autocomplete="off" id="nav-search-input" type="text" class="input-small search-query" placeholder="Search ..." />
										<i id="nav-search-icon" class="icon-search"></i>
									</span>
        </form>
      </div><!--#nav-search-->
    </div><!--#breadcrumbs-->



    <div id="page-content" class="clearfix">


      <div class="row-fluid">
        <!-- PAGE CONTENT BEGINS HERE -->